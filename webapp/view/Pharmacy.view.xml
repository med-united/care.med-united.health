<mvc:View controllerName="webapp.controller.Pharmacy" xmlns:l="sap.ui.layout" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.f" xmlns:m="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt" height="100%">
	<html:style>
        .sapMIBar {
            border: none !important;
        }
        .sapMITBTextOnly .sapMITBFilter {
            padding: 0 2rem;
        }
    </html:style>
	<tnt:ToolHeader width="100%">
		<m:ToolbarSpacer width="3rem" />
		<m:Image src="./images/logo_med-united_white[79].png" width="118px"></m:Image>
		<m:ToolbarSpacer width="2rem" />
		<m:MenuButton text="Apotheke" type="Emphasized">
			<m:menu>
				<m:Menu>
					<m:MenuItem text="Pflegeeinrichtung" press=".goToMedication" />
				</m:Menu>
			</m:menu>
		</m:MenuButton>
		<m:ToolbarSpacer />
		<m:Button icon="sap-icon://search" type="Transparent" />
		<m:Button icon="sap-icon://co" type="Transparent" />
		<m:Button icon="sap-icon://bell" type="Transparent" />
		<m:Avatar src="images/Avatar-Sizes-Custom-1.png" displaySize="XS" press=".onAvatarPressed" />
		<m:ToolbarSpacer width="3rem" />
	</tnt:ToolHeader>
	<tnt:ToolHeader>
		<m:ToolbarSpacer width="3rem" />
		<m:IconTabHeader mode="Inline" select=".changeTab">
			<m:items>
				<m:IconTabFilter key="notReady" text="{i18n>notReadyTabFilter}" />
				<m:IconTabFilter key="prescriptionMonitoring" text="{i18n>prescriptionControlTabFilter}" />
				<m:IconTabFilter key="prescriptionBox" text="{i18n>prescriptionBoxTabFilter}" />
				<m:IconTabFilter key="billed" text="{i18n>billedTabFilter}" />
			</m:items>
		</m:IconTabHeader>

	</tnt:ToolHeader>

	<m:Panel id="viewContainer" width="100%" height="100%">
        <mvc:XMLView viewName="webapp.view.pharmacy.NotReady" />
    </m:Panel>

</mvc:View>