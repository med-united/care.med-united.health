<mvc:View controllerName="webapp.controller.Medication" xmlns:l="sap.ui.layout" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.f" xmlns:m="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt" height="100%">
	<html:style>
		.sapMIBar {
			border: none !important;
		}
		.sapMITBTextOnly .sapMITBFilter {
			padding: 0 2rem;
		}
 	</html:style>
	<tnt:ToolHeader width="100%">
		<m:ToolbarSpacer width="3rem" />
		<m:Image src="./images/logo_med-united_white[79].png" width="118px"></m:Image>
		<m:ToolbarSpacer width="2rem" />
		<m:MenuButton text="Pflegeeinrichtung" type="Emphasized">
			<m:menu>
				<m:Menu>
					<m:MenuItem text="Apotheke" />
				</m:Menu>
			</m:menu>
		</m:MenuButton>
		<m:ToolbarSpacer />
		<m:Button icon="sap-icon://search" type="Transparent" />
		<m:Button icon="sap-icon://co" type="Transparent" />
		<m:Button icon="sap-icon://bell" type="Transparent" />
		<m:Avatar src="images/Avatar-Sizes-Custom-1.png" displaySize="XS" press=".onAvatarPressed" />
		<m:ToolbarSpacer width="3rem" />
	</tnt:ToolHeader>
	<tnt:ToolHeader>
		<m:ToolbarSpacer width="3rem" />
		<m:IconTabHeader mode="Inline">
			<m:items>
				<m:IconTabFilter key="start" text="Start" />
				<m:IconTabFilter key="patienten" text="Patienten" />
				<m:IconTabFilter key="medikationsplan" text="Medikationsplan" />
				<m:IconTabFilter key="verordnung" text="Verordnung" />
				<m:IconTabFilter key="rechnung" text="Rechnung" />
			</m:items>
		</m:IconTabHeader>

	</tnt:ToolHeader>

	<m:App>
		<m:pages>
			<m:Page class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer">
				<m:headerContent>
					<m:Button text="E-Rezepte Anfordern" type="Emphasized" />
					<m:Button text="Alle Medikamente bestellen" type="Ghost" />
				</m:headerContent>

				<m:customHeader>
					<m:Bar class="bar">
						<m:contentLeft>
							<m:Text text="Pflegeeinrichtung" class="pflegeTitel"></m:Text>
						</m:contentLeft>

						<m:contentMiddle></m:contentMiddle>

						<m:contentRight>
							<m:Button text="E-Rezepte Anfordern" type="Emphasized" />
							<m:Button text="Alle Medikamente bestellen" type="Ghost" />
						</m:contentRight>
					</m:Bar>
				</m:customHeader>
				<m:content>
					<m:FlexBox height="50px" alignItems="Center" justifyContent="SpaceBetween" class="medicamentBox">
						<m:Text text="Medikamentmanagement" class="mediumFont" />
						<m:HBox>
							<m:Toolbar>
								<m:SearchField width="100%" placeholder="Suchen" />
							</m:Toolbar>
							<m:Button icon="sap-icon://paste" type="Transparent" />
							<m:Button icon="sap-icon://filter" type="Transparent" />
							<m:Button icon="sap-icon://group-2" type="Transparent" />
							<m:Button icon="sap-icon://action-settings" type="Transparent" />
							<m:Button icon="sap-icon://print" type="Transparent" />
							<m:Button icon="sap-icon://full-screen" type="Transparent" />
						</m:HBox>

					</m:FlexBox>

					<m:Table>
						<m:columns>
							<m:Column>
								<m:Label text="Medikament" />
							</m:Column>
							<m:Column>
								<m:Label text="PZN" />
							</m:Column>
							<m:Column>
								<m:Label text="Datum" />
							</m:Column>
							<m:Column>
								<m:Label text="Bestand" />
							</m:Column>
							<m:Column>
								<m:Label text="Vsl. Verbrauch bis" />
							</m:Column>
							<m:Column>
								<m:Label text="Vsl. Verbrauch in Tagen" />
							</m:Column>
							<m:Column>
								<m:Label text="Verbrauch bis heute" />
							</m:Column>
							<m:Column>
								<m:Label text="Arzt" />
							</m:Column>
							<m:Column>
								<m:Label text="Apotheke" />
							</m:Column>
							<m:Column>
								<m:Label text="Aktiv" />
							</m:Column>
						</m:columns>
						<m:items>


						</m:items>
					</m:Table>

				</m:content>

			</m:Page>
		</m:pages>
	</m:App>
</mvc:View>