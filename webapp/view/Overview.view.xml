<mvc:View xmlns:internal="sap.landvisz.internal" controllerName="webapp.controller.Overview" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.f" xmlns:m="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt" height="100%">
    <html:style>
        .sapMIBar {
            border: none !important;
        }
        .sapMITBTextOnly .sapMITBFilter {
            padding: 0 2rem;
        }
    </html:style>
    <tnt:ToolHeader width="100%">
        <m:ToolbarSpacer width="3rem" />
        <m:Image src="./images/logo_med-united_white[79].png" width="118px"></m:Image>
        <m:ToolbarSpacer width="2rem" />
        <m:MenuButton text="{i18n>careFacilityView}" type="Emphasized">
            <m:menu>
                <m:Menu>
                    <m:MenuItem text="{i18n>pharmacyView}" press=".goToPharmacy" />
                </m:Menu>
            </m:menu>
        </m:MenuButton>
        <m:ToolbarSpacer />
        <m:Button icon="sap-icon://search" type="Transparent" />
        <m:Button icon="sap-icon://co" type="Transparent" />
        <m:Button icon="sap-icon://bell" type="Transparent" />
        <m:Avatar src="images/Avatar-Sizes-Custom-1.png" displaySize="XS" />
        <m:ToolbarSpacer width="3rem" />
    </tnt:ToolHeader>

    <tnt:ToolHeader>
        <m:ToolbarSpacer width="3rem" />
        <m:IconTabHeader mode="Inline" selectedKey="start" select=".changeTab">
            <m:items>
                <m:IconTabFilter key="start" text="{i18n>startTabFilter}"></m:IconTabFilter>
                <m:IconTabFilter key="patient" text="{i18n>patientsTabFilter}" />
                <m:IconTabFilter key="medication" text="{i18n>medicationTabFilter}"></m:IconTabFilter>
                <m:IconTabFilter key="prescription" text="{i18n>prescriptionTabFilter}" />
                <m:IconTabFilter key="bill" text="{i18n>billTabFilter}" />
            </m:items>
        </m:IconTabHeader>
    </tnt:ToolHeader>

    <m:Panel id="viewContainer" width="100%" height="100%">
        <mvc:XMLView viewName="webapp.view.carefacility.Start" />
    </m:Panel>
    
</mvc:View>