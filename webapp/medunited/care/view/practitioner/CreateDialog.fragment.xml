<core:FragmentDefinition xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog id="createDialog" title="{i18n>Create}" contentWidth="40rem">
		<form:SimpleForm editable="false"
			layout="ResponsiveGridLayout" labelSpanXL="4"
			labelSpanL="4" labelSpanM="12" labelSpanS="12"
			adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0"
			emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2"
			singleContainerFullSize="true">
			<form:content>
				<Input
					id="practitionerNameInput"
					placeholder="Enter practitioner name"
					showSuggestion="true"
					suggest=".onSuggest"
					suggestionItems="{newModel>/elements}" >
					<suggestionItems>
						<core:Item text="{newModel>tags/name}" />
					</suggestionItems>
				</Input>
				<Label text="{i18n>GivenName}" />
				<Input type="text" value="{name/[use=official]/given/0}" />
				<Label text="{i18n>FamilyName}" />
				<Input type="text" value="{name/[use=official]/family}" />
				<Label text="{i18n>Email}" />
				<Input type="text" value="{telecom/0/value}" />
                <Label text="{i18n>Phone}" />
				<Input type="text" value="{telecom/1/value}" />
			</form:content>
		</form:SimpleForm>
		<beginButton>
			<Button type="Reject" text="{i18n>cancel}" press="onCancel" />
		</beginButton>
		<endButton>
			<Button type="Accept" text="{i18n>Create}" press="onSave" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>