<core:FragmentDefinition xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog id="createDialog" title="{i18n>dialogTitleCreate}" contentWidth="40rem">
		<form:SimpleForm editable="false"
			layout="ResponsiveGridLayout" labelSpanXL="4"
			labelSpanL="4" labelSpanM="12" labelSpanS="12"
			adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0"
			emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2"
			singleContainerFullSize="true">
			<form:content>
				<Label text="{i18n>GivenName}" />
				<Input id="givenName" valueStateText="Name must not be empty and should only contain letters." liveChange= ".onChange"
					value="{
						path : 'name/[use=official]/given/0',
						type : 'customTypeName'
					}"/>

				<Label text="{i18n>FamilyName}" />
				<Input id="familyName" valueStateText="Name must not be empty and should only contain letters." liveChange= ".onChange"
					value="{
						path: 'name/[use=official]/family',
						type: 'customTypeName'
					}" />

				<Label text="{i18n>BirthDate}" />
				<DatePicker id="birthDate" placeholder="YYYY-MM-dd" displayFormat="YYYY-MM-dd" valueFormat="YYYY-MM-dd" valueStateText="Format is YYYY-MM-dd." liveChange= ".onChange"
					value="{
						path: 'birthDate',
						type: 'customTypeDate',
						formatOptions: {
    						pattern: 'YYYY-MM-dd'
						}
					}" />

				<Label text="{i18n>Street}" />
				<Input id="street" liveChange= ".onChange"
					value="{
						path: 'address/[use=home]/line/0',
						type: 'sap.ui.model.type.String'
					}" />

				<Label text="{i18n>PostalCode}" />
				<Input id="postalCode" valueStateText="The postal code should have 5 digits." liveChange= ".onChange"
					value="{
						path: 'address/[use=home]/postalCode',
						type: 'customTypePostalCode'
					}" />

				<Label text="{i18n>City}" />
				<Input id="city" valueStateText="City name should only contain letters." liveChange= ".onChange"
					value="{
						path: 'address/[use=home]/city',
						type: 'customTypeName'
					}" />

				<Label text="{i18n>labelPatientGender}" />
				<Select id="patientGenderSelect" forceSelection="false" selectedKey="{gender}">
                	<core:Item key="male" text="{i18n>Male}"/>
                	<core:Item key="female" text="{i18n>Female}"/>
				</Select>
				<Label text="{i18n>GeneralPractitioner}" />
				<Select id="generalPractitionerSelect" items="{/Practitioner}" forceSelection="false" selectedKey="{generalPractitioner/0/reference}">
                	<core:Item key="Practitioner/{id}" text="{name/0/given/0} {name/0/family}" />
            	</Select>
				<Label text="{i18n>ManagingOrganization}" />
				<Select id="defaultOrganizationSelect" items="{/Organization}" forceSelection="false" selectedKey="{managingOrganization/reference}">
                	<core:Item key="Organization/{id}" text="{name}" />
            	</Select>
			</form:content>
		</form:SimpleForm>
		<beginButton>
			<Button type="Reject" text="{i18n>buttonCancel}" press="onCancel" />
		</beginButton>
		<endButton>
			<Button type="Accept" text="{i18n>buttonCreate}" press="onSave" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>