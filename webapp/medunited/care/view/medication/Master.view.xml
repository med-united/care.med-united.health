<mvc:View displayBlock="true"
	controllerName="medunited.care.controller.medication.Master" height="100%"
	xmlns="sap.m" xmlns:f="sap.f" xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="medicationPageId"
		toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>medications}" />
				</f:heading>
				<f:actions>
					<Button type="Emphasized" text="{i18n>Create}" press="onAdd" />
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<Table id="medicationsTable" inset="false"
				items="{/MedicationStatement}"
				class="sapFDynamicPageAlignContent" width="auto" growing="true" autoPopinMode="true" mode="MultiSelect" selectionChange="onSelectionChange">
				<headerToolbar>
					<OverflowToolbar>
						<ToolbarSpacer />
						<SearchField search="onSearch" width="17.5rem" />
						<OverflowToolbarButton
							icon="sap-icon://sort" type="Transparent" press="onSort" />
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="20%" importance="High" autoPopinWidth="10">
						<Text text="{i18n>medicationName}" />
					</Column>
					<Column width="20%" importance="High">
						<Text text="{i18n>medicationPZN}" />
					</Column>
					<Column width="20%" importance="High">
						<Text text="{i18n>medicationSize}" />
					</Column>
					<Column width="20%" importance="High">
						<Text text="{i18n>medicationDosage}" />
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation"
						press="onListItemPress">
						<cells>
							<Text
								text="{name/0/given}" />
							<Text
								text="{name/0/family}" />
							<Text text="{path: 'birthDate', formatOptions: {style: 'short'}}" />
							<Text
								text="{GeneralPractitioner}" />
							<Text
								text="{ManagingOrganization}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Reject" text="{i18n>DeleteSelected}" press="onDeleteSelected" />
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>