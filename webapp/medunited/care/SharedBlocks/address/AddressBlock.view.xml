<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form">
    <form:SimpleForm id="addressFormRead" 
        editable="false"
        layout="ResponsiveGridLayout"
        labelSpanXL="3"
        labelSpanL="3"
        labelSpanM="3"
        labelSpanS="12"
        emptySpanXL="4"
        emptySpanL="4"
        emptySpanM="4"
        emptySpanS="0"
        columnsXL="2"
        columnsL="2"
        columnsM="2"
        visible="{= !${appState>/editMode}}">
        <form:content>
            <Label text="{i18n>labelPatientStreet}" labelFor="patientStreetText"/>
            <Text id="patientStreetText" text="{address/[use=home]/line/0}" />
            <Label text="{i18n>labelPatientPostalCode}" labelFor="patientPostalCodeText"/>
            <Text id="patientPostalCodeText" text="{address/[use=home]/postalCode}" />
            <Label text="{i18n>labelPatientCity}" labelFor="patientCityText"/>
            <Text id="patientCityText" text="{address/[use=home]/city}" />
        </form:content>
    </form:SimpleForm>
    <form:SimpleForm id="addressFormEdit" 
        editable="true"
        layout="ResponsiveGridLayout"
        labelSpanXL="3"
        labelSpanL="3"
        labelSpanM="3"
        labelSpanS="12"
        emptySpanXL="4"
        emptySpanL="4"
        emptySpanM="4"
        emptySpanS="0"
        columnsXL="2"
        columnsL="2"
        columnsM="2"
        visible="{appState>/editMode}">
        <form:content>
            <Label text="{i18n>labelPatientStreet}" />
            <Input id="street"
                value="{
                    path: 'address/[use=home]/line/0',
                    type: 'sap.ui.model.type.String'
                }" />
                
            <Label text="{i18n>labelPatientPostalCode}" />
            <Input id="postalCode"
                value="{
                    path: 'address/[use=home]/postalCode',
                    type: 'customTypePostalCode'
                }" />

            <Label text="{i18n>labelPatientCity}" />
            <Input id="city"
                value="{
                    path: 'address/[use=home]/city',
                    type: 'customTypeName'
                }" />
        </form:content>
    </form:SimpleForm>
</mvc:View>