<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.f" xmlns:core="sap.ui.core">
    <ResponsivePopover placement="Bottom" showHeader="false">
        <f:ProductSwitch change="fnChange"
            items="{
                path: 'menu>/items'
            }">
            <f:items>
                <f:ProductSwitchItem src="{menu>src}" title="{menu>title}" subTitle="{menu>subTitle}" targetSrc="{menu>targetSrc}" target="{menu>target}"/>
            </f:items>
        </f:ProductSwitch>
    </ResponsivePopover>
</core:FragmentDefinition>